<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<?import javafx.scene.layout.AnchorPane?>
<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.cfogrady.dim.modifier.controllers.LoadedViewController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button fx:id="openButton" mnemonicParsing="false" text="Open" />
            <Button fx:id="saveButton" mnemonicParsing="false" text="Save" />
            <Text fx:id="dimIdText" strokeType="OUTSIDE" strokeWidth="0.0" text="DIM ID: 0" />
            <Text fx:id="revisionIdText" strokeType="OUTSIDE" strokeWidth="0.0" text="Revision: 0" />
            <Text fx:id="factoryDateText" strokeType="OUTSIDE" strokeWidth="0.0" text="Factory Date" />
            <Text fx:id="checksumText" strokeType="OUTSIDE" strokeWidth="0.0" text="Checksum" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="charactersButton" mnemonicParsing="false" text="Characters" />
            <Button fx:id="battlesButton" mnemonicParsing="false" text="Battles" />
            <Button fx:id="systemButton" mnemonicParsing="false" text="System" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <AnchorPane fx:id="subView" VBox.vgrow="ALWAYS"/>
   </children>
</VBox>
